{
  "name": "@cybercom-finland/knowit-design-system",
  "repository": {
    "type": "git",
    "url": "https://github.com/cybercom-finland/knowit-finland-design-system.git"
  },
  "version": "0.3.0",
  "private": false,
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "files": [
    "dist",
    "src"
  ],
  "dependencies": {
    "@floating-ui/react": "^0.26.1",
    "react-icons": "^4.11.0",
    "styled-components": "^6.1.0",
    "styled-system": "^5.1.5"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "ts-jest": "^29.1.1"
  },
  "scripts": {
    "lint:eslint": "eslint --fix src",
    "lint:prettier": "prettier --write \"src/**/*.tsx\" --loglevel warn ",
    "storybook": "storybook dev -p 6006 -s ./",
    "build-storybook": "storybook build -s public",
    "test-storybook": "test-storybook",
    "chromatic": "chromatic --exit-zero-on-changes",
    "prepare": "husky install",
    "build": "rollup -c",
    "test": "jest"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "overrides": [
      {
        "files": [
          "**/*.stories.*"
        ],
        "rules": {
          "import/no-anonymous-default-export": "off"
        }
      }
    ]
  },
  "lint-staged": {
    "**/*.{js,jsx,json}": [
      "eslint . --fix",
      "prettier --write ."
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.5",
    "@storybook/addon-a11y": "^7.5.2",
    "@storybook/addon-actions": "^7.5.2",
    "@storybook/addon-coverage": "^0.0.9",
    "@storybook/addon-designs": "^7.0.5",
    "@storybook/addon-essentials": "^7.5.2",
    "@storybook/addon-interactions": "^7.5.2",
    "@storybook/addon-links": "^7.5.2",
    "@storybook/addon-mdx-gfm": "^7.5.2",
    "@storybook/jest": "^0.2.3",
    "@storybook/node-logger": "^7.5.2",
    "@storybook/preset-create-react-app": "^7.5.2",
    "@storybook/react": "^7.5.2",
    "@storybook/react-webpack5": "^7.5.2",
    "@storybook/test-runner": "^0.13.0",
    "@storybook/testing-library": "^0.2.2",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.5.1",
    "@types/jest": "^29.5.7",
    "@types/node": "^20.8.10",
    "@types/react": "^18.2.33",
    "@types/react-dom": "^18.2.14",
    "@types/styled-components": "^5.1.29",
    "@types/styled-system": "^5.1.20",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "axe-playwright": "^1.2.3",
    "babel-plugin-named-exports-order": "^0.0.2",
    "chromatic": "^7.6.0",
    "eslint": "^8.52.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-storybook": "^0.6.15",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "jest-runner": "^29.7.0",
    "lint-staged": "^15.0.2",
    "prettier": "^3.0.3",
    "prop-types": "^15.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "^5.0.1",
    "rollup": "^4.2.0",
    "rollup-plugin-dts": "^6.1.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-terser": "^7.0.2",
    "storybook": "^7.5.2",
    "typescript": "^5.2.2",
    "web-vitals": "^3.5.0"
  }
}
